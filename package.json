{
  "name": "nightreign-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:no-cache": "rm -rf .next && rm -rf node_modules/.cache && rm -rf .swc && next dev --turbo=false",
    "dev:fresh": "rm -rf .next && rm -rf node_modules/.cache && rm -rf .swc && NODE_OPTIONS='--max-old-space-size=4096' next dev --turbo=false",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "export": "next build && next export"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.3"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "@eslint/eslintrc": "^3"
  }
}
